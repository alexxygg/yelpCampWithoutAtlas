<div class="alert alert-danger" role="alert">
  <h2><%=err.message %></h2>
  <div>
    <!-- IF  IN DEVELOPMENT, SHOW ERROR STACK, HIDE IF 
    IN PRODUCTION-->
    <% if (process.env.NODE_ENV !== "production") { %>
    <p class="my-5 text-align-center">
      <!-- We're sorry, we were not able to find the webpage you requested. -->
      <!-- Please try again later or go back to our -->
      <%=err.stack %>
    </p>
    <% } %>
    <a href="/campgrounds">Return to Campgrounds</a>
  </div>
</div>
